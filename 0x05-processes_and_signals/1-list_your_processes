#!/usr/bin/env bash
# Function to display processes in a hierarchical format

display_custom_processes() {
    # Print the header exactly as specified
    printf "%-8s %-9s %s\n" "USER" "STARTED" "COMMAND"
    
    # Get all processes and format them as requested
    ps -e -o user:8,start:8,comm --no-headers --forest | while read user start command; do
        # Skip empty lines
        if [ -z "$user" ]; then
            continue
        fi
        
        # Format the output
        printf "%-8s %-9s %s\n" "$user" "$start" "$command"
    done
}

# Main execution
display_custom_processes
