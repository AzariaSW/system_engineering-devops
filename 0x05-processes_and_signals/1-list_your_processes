#!/usr/bin/env bash
# Function to display processes in a hierarchical format

ps -eo user=,pid=,lstart=,cmd= --no-headers | while read -r user pid day month date time year cmdrest; do
    # Combine cmd fields into one string
    cmd="$cmdrest"
    printf "%-8s %-5s %-8s %s\n" "$user" "$pid" "$time" "$cmd"
done
