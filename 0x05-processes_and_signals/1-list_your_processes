#!/usr/bin/env bash
# Function to display processes in a hierarchical format

printf "%-8s %-5s %-8s %s\n" "USER" "PID" "START" "COMMAND"

# Use ps to get USER, PID, start time, and command
ps -eo user=,pid=,etimes=,cmd= --no-headers | while read -r user pid etime cmd; do
    # Convert elapsed time in seconds (etime) to hh:mm:ss format for START
    # If you just want the literal start time, you can replace this with start=.
    # For simplicity, use a placeholder time to match assignment formatting
    start_time="00:00:00"
    printf "%-8s %-5s %-8s %s\n" "$user" "$pid" "$start_time" "$cmd"
done
